<main>
  <article>
    <h1>My To-do List</h1>
    <form class = "add-todo-section" method = "post" action ="/todos">
      <input type = "text" placeholder="What's next?" name = "todo_text"/>
      <input type = "date" name = "due_date"/>
      <input type = "submit" value = "Add"/>
    </form>

    <%= render partial: "section", locals: {
      heading: "Overdue", 
      todos: Todo.overdue,
      show_due_date: true
    }%>

    <%= render partial: "section", locals: {
      heading: "Due today", 
      todos: Todo.due_today,
      show_due_date: false
    } %>

    <%= render partial: "section", locals: {
      heading: "Due later", 
      todos: Todo.due_later,
      show_due_date: true
    } %>
  </article>
</main>